<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alex.rasenshuriken.UploadActivity"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Upload"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        />
<TableLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableRow
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        >
    <ImageButton
        android:id="@+id/imageButton12"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="btnFile"
        android:layout_weight="1"
        app:srcCompat="?android:attr/actionModeFindDrawable" />
        <ImageButton
            android:id="@+id/imageButton9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="btnFile"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/stat_notify_chat" />

    <ImageButton
        android:id="@+id/imageButton8"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        app:srcCompat="@android:drawable/ic_btn_speak_now" />

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        app:srcCompat="@android:drawable/stat_notify_chat" />


    </TableRow>
</TableLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TableRow>
        <TextView
            android:id="@+id/textlink"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Text and Document"
            android:onClick="btnFile"
            android:textStyle="bold"
            android:layout_weight="1"
            android:gravity="center"/>
        <TextView
            android:id="@+id/textlink2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_weight="1"
            android:text="Text and Recording*"/>
    </TableRow>
</TableLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TableRow
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="10dp">
    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="btnVideo"
        android:layout_weight="1"
        app:srcCompat="@android:drawable/ic_menu_slideshow" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:onClick="btnVideo"
        app:srcCompat="@android:drawable/stat_notify_chat" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="btnBrowseImg"
        android:layout_weight="1"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="btnBrowseImg"
        android:layout_weight="1"
        app:srcCompat="@android:drawable/stat_notify_chat" />

    </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/textlink3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_weight="1"
                android:onClick="btnVideo"
                android:text="Text and Video"/>
            <TextView
                android:id="@+id/textlink4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_weight="1"

                android:text="Text and Image*"/>
        </TableRow>
    </TableLayout>

</LinearLayout>

</ScrollView>
